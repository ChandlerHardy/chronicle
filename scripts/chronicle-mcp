#!/usr/bin/env python3
"""Chronicle MCP Server executable.

This script runs the Chronicle MCP server, which provides AI tools with
access to Chronicle's database of sessions, commits, and summaries.

Usage:
    chronicle-mcp

The server communicates over stdio using the Model Context Protocol.
It should be configured in your MCP client configuration (e.g., ~/.mcp.json).
"""

import sys
import os

# Add the parent directory to the path so we can import backend modules
script_dir = os.path.dirname(os.path.abspath(__file__))
project_root = os.path.dirname(script_dir)
sys.path.insert(0, project_root)

from backend.mcp.server import mcp

if __name__ == "__main__":
    # Run the FastMCP server
    mcp.run()
